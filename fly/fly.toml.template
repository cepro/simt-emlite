# Use this file to create a mediators app for an esco.
# 
# 1) copy this template and edit the place holders inside
#     cp fly/fly.toml.template fly/fly-<esco>.toml
# 
# 2) create the app
#     fly launch --config fly/fly-<esco>.toml --no-deploy --org cepro

app = 'mediators-##esco##'
primary_region = 'ams'

[build]
  # never deployed, just need some image when we "fly launch --no-deploy ..."
  # to create the app from this toml file.
  image = 'hello-world'

[[services]]
  protocol = ''
  internal_port = 50051
  auto_stop_machines = 'stop'
  auto_start_machines = true

  [[services.ports]]
    port = 50051
    force_https = true
  
[[vm]]
  cpu_kind = 'shared'
  cpus = 1
  memory_mb = 256

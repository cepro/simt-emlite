[Unit]
Description=Restarts openvpn client to ensure it's connected

[Timer]
# before the hourly meter syncing job
OnCalendar=*-*-* *:01:00
# before the daily meter syncing job
OnCalendar=*-*-* 0:30:00
# before each 12 hourly meter syncing job
OnCalendar=*-*-* 6:18:00
OnCalendar=*-*-* 18:18:00
Persistent=true

[Install]
WantedBy=timers.target
